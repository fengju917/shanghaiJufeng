<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center|top">

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/lakala_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51.2dip"
        android:orientation="horizontal" 
        android:background="@drawable/set_item_back"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76.8dip"
            android:text="@string/contact_no"
            android:textColor="@color/dialog_lable_text"
            android:textSize="25.6sp" />

        <TextView
            android:id="@+id/contac_no_text"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.6dip"
            android:textSize="25.6sp" 
            android:background="@color/dialog_button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.6dip"
        android:orientation="horizontal" 
        android:background="@drawable/set_item_back"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76.8dip"
            android:text="@string/term_number"
            android:textColor="@color/dialog_lable_text"
            android:textSize="25.6sp" />

        <TextView
            android:id="@+id/term_no_text"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.6dip"
            android:textSize="25.6sp"
            android:background="@color/dialog_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.6dip"
        android:orientation="horizontal"
        android:background="@drawable/set_item_back"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76.8dip"
            android:text="@string/cer_pwd" 
            android:textColor="@color/dialog_lable_text"
            android:textSize="25.6sp"/>

        <EditText
            android:id="@+id/cerpwd_text"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.6dip"
            android:inputType="numberPassword" 
            android:textSize="25.6sp"
            android:maxLength="6"
            android:background="@color/dialog_button"/>
    </LinearLayout>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dip"
        android:background="@drawable/button_style"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="38.4sp" />

</LinearLayout>