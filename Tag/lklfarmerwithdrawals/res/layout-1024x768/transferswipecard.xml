<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
   <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/lakala_title" />
   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"      
        android:gravity="center">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/scontentbg"
        android:gravity="center"
        android:orientation="vertical">
        <FrameLayout 
            android:layout_width="870.4dip"
            android:layout_height="76.8dip"
            android:background="@drawable/topbg_yellow"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="64.0dip"
                android:layout_height="76.8dip"
                android:background="@drawable/sxiaofei_icon"
                android:gravity="left|center"/>
            <TextView 
                android:layout_width="125.6dip"
                android:layout_height="76.8dip"
                android:textColor="#FFFFFF"
                android:textSize="38.4dp"
                android:text="插卡"
                android:layout_marginLeft="76.8dip"
                android:gravity="left|center"/>
        </FrameLayout>
        <LinearLayout 
            android:layout_width="870.4dip"
            android:layout_height="413.44dip"
            android:background="@drawable/binputbg"
            android:orientation="vertical">
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="89.6dip"
                android:layout_marginTop="38.4dip">
                <ImageView 
                    android:layout_width="57.6dip"
                    android:layout_height="57.6dip"
                    android:layout_marginTop="5dip"
                    android:background="@drawable/swipecard"/>
                <TextView android:id="@+id/transfer_swip_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请插卡"
                    android:textColor="#000000"
                    android:textSize="51.2dp"/>
            </LinearLayout>
            <EditText 
                android:id="@+id/swipcardET"
                android:layout_width="665.6dip"
                android:layout_height="89.6dip"
                android:layout_marginLeft="102.4dip"
                android:layout_marginTop="51.2dip"
                android:gravity="center"
                android:paddingLeft="12.8dip"
                android:inputType="number"
                android:singleLine="true"
		        android:textSize="38.4dp"
		        android:maxLength="27"
		        android:background="@drawable/input"
		        android:hint="请插卡"/>
            <Button 
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="448.0dip"
                android:layout_marginTop="25.6dip"
                android:background="@drawable/button_style"
                android:text="下一步"
                android:textColor="#FFFFFF"                
                android:textSize="38.4dp"/>
        </LinearLayout>
    </LinearLayout>
	</LinearLayout>
</LinearLayout>