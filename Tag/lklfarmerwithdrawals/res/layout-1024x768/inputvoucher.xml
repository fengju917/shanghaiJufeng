<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/lakala_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scontentbg"
            android:gravity="center"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="870.4dip"
                android:layout_height="76.8dip"
                android:background="@drawable/topbg_yellow"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="64.0dip"
                    android:layout_height="76.8dip"
                    android:background="@drawable/sxiaofei_icon"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="281.6dip"
                    android:layout_height="76.8dip"
                    android:layout_marginLeft="76.8dip"
                    android:gravity="left|center"
                    android:textColor="#FFFFFF"
                    android:textSize="38.4dip" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="870.4dip"
                android:layout_height="413.44dip"
                android:background="@drawable/binputbg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="89.6dip"
                    android:layout_marginTop="38.4dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/show_batch_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="51.2dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_voucher"
                    android:layout_width="665.6dip"
                    android:layout_height="89.6dip"
                    android:layout_marginLeft="102.4dip"
                    android:layout_marginTop="51.2dip"
                    android:background="@drawable/input"
                    android:ellipsize="end"
                    android:maxLength="6"
                   	android:hint="原交易凭证号"
                    android:inputType="number"
                    android:paddingLeft="12.8dip"
                    android:singleLine="true"
                    android:textSize="38.4dip" />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="448.0dip"
                    android:layout_marginTop="25.6dip"
                    android:background="@drawable/button_style"
                    android:text="下一步"
                    android:textColor="#FFFFFF"
                    android:textSize="38.4dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>