<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="705.28dip"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="@color/dialog_bg"
    android:gravity="center">
    <TextView android:layout_width="wrap_content"
        android:layout_height="81.92dip"
        android:paddingLeft="19.2dip"
        android:paddingTop="20.48dip"
        android:textSize="30sp"
        android:text="请输入凭证号"
        android:textColor="@color/dialog_lable_text"/>
    <LinearLayout android:layout_width="705.28dip"
        android:layout_height="3.84dip"
        android:background="@color/dialog_lable_text"/>
    <EditText 
        android:id="@+id/editText"
        android:layout_width="281.6dip"
        android:layout_height="76.8dip"
        android:maxLength="6"
        android:inputType="number"/>
    <LinearLayout android:layout_width="705.28dip"
        android:layout_height="1.28dip"
        android:background="@color/dialog_device_view"/>
    <RelativeLayout android:layout_width="705.28dip"
        android:layout_height="70.4dip">
    	<Button android:id="@+id/cancel"
    	    android:layout_width="352dip"
    	    android:layout_height="70.4dip"
    	    android:background="@drawable/dialog_btn"
    	    android:textSize="23sp"
    	    android:text="取消"/>
    	<LinearLayout android:id="@+id/device_view"
    	    android:layout_width="1.28dip"
        	android:layout_height="70.4dip"
        	android:background="@color/dialog_device_view"
        	android:orientation="vertical"
        	android:layout_toRightOf="@id/cancel"/>
    	<Button android:id="@+id/comfirm"
    	    android:layout_width="352dip"
    	    android:layout_height="70.4dip"
    	    android:background="@drawable/dialog_btn"
    	    android:layout_toRightOf="@id/device_view"
    	    android:textSize="23sp"
    	    android:text="确定"/>
    </RelativeLayout>
</LinearLayout>