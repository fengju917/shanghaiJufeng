<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="800dip"
        android:layout_height="79dip"
        layout="@layout/lakala_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="784dip"
            android:layout_height="477dip"
            android:background="@drawable/scontentbg"
            android:gravity="center"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="680dip"
                android:layout_height="60dip"
                android:background="@drawable/topbg_yellow"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="60dip"
                    android:background="@drawable/sxiaofei_icon"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="220dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="60dip"
                    android:gravity="left|center"
                    android:text="重打印交易"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="680dip"
                android:layout_height="323dip"
                android:background="@drawable/binputbg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dip"
                    android:layout_marginTop="30dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请输入原交易凭证号"
                        android:textColor="#000000"
                        android:textSize="40dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_billno"
                    android:layout_width="520dip"
                    android:layout_height="70dip"
                    android:layout_marginLeft="80dip"
                    android:layout_marginTop="40dip"
                    android:background="@drawable/input"
                    android:ellipsize="end"
                    android:maxLength="6"
                    android:hint="请输入原交易凭证号"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="250dip"
					android:layout_height="57dip"
                    android:layout_marginLeft="350dip"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/button_style"
                    android:text="确定"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>