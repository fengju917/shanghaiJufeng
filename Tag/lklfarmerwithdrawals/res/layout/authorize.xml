<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/lakala_title"
        android:layout_width="800dip"
        android:layout_height="79dip"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="492dip"
        android:background="@drawable/contentbg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="784dip"
            android:layout_height="476dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/scontentbg"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="680dip"
                android:layout_height="60dip"
                android:layout_marginLeft="52dip"
                android:layout_marginTop="50dip"
                android:background="@drawable/topbg_red"
                android:orientation="horizontal">
                
            <ImageView 
                android:layout_width="50dip"
                android:layout_height="60dip"
                android:gravity="left|center"
                android:background="@drawable/sshezhi_icon"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:text="主管操作员"
                android:layout_marginTop="10dip"/>
   			</LinearLayout>
   			
            <LinearLayout
                android:layout_width="680dip"
                android:layout_height="323dip"
                android:layout_marginLeft="52dip"
                android:background="@drawable/binputbg"
                android:orientation="vertical">"
				<LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_marginLeft="70dip"
	                android:layout_marginTop="30dip">
	                <ImageView 
	                    android:layout_width="45dip"
	                    android:layout_height="45dip"
	                    android:layout_marginTop="5dip"
	                    android:background="@drawable/lock"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="请输入主管操作员密码："
	                    android:textColor="#000000"
	                    android:textSize="40dp"/>
	            </LinearLayout>
	            <EditText 
	                android:id="@+id/pswdET"
	                android:layout_width="520dip"
	                android:layout_height="70dip"
	                android:layout_marginLeft="80dip"
	                android:layout_marginTop="40dip"
	                android:paddingLeft="10dip"
	                android:singleLine="true"
	                android:maxLength="6"
			        android:ellipsize="end"
			        android:inputType="numberPassword"
			        android:imeOptions="normal"
			        android:textSize="30dp"
			        android:hint="主管操作员密码"
			        android:background="@drawable/input"/>
	            <Button 
	                android:id="@+id/sumitBtn"
	                android:layout_width="250dip"
	                android:layout_height="57dip"
	                android:layout_marginLeft="350dip"
	                android:layout_marginTop="20dip"
	                android:background="@drawable/button_style"
	                android:text="确定"
	                android:textColor="#FFFFFF"                
	                android:textSize="30dp"/>
	   		</LinearLayout>
   		</LinearLayout>
    </LinearLayout>
</LinearLayout>