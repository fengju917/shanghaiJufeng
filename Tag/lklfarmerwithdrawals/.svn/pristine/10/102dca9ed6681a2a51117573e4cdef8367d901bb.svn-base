<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/transback"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="850dp"
        android:layout_height="485dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:background="@drawable/load_bg" >

        <ImageView
            android:id="@+id/progress_image_anim"
            android:layout_width="222dip"
            android:layout_height="200dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/is_print_tow" />

        <TextView
            android:id="@+id/firsttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cancelbutton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:text="正在读取IC卡，请稍后"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignBaseline="@+id/comfirmbutton"
            android:layout_alignBottom="@+id/comfirmbutton"
            android:layout_toLeftOf="@+id/progress_image_anim"
            android:background="@drawable/print_btn"
            android:text="是"
            android:textColor="@color/white"
            android:textSize="45dp" />

        <Button
            android:id="@+id/comfirmbutton"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="47dp"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/progress_image_anim"
            android:background="@drawable/print_btn"
            android:text="否"
            android:textColor="@color/white"
            android:textSize="45dp" />

    </RelativeLayout>

</LinearLayout>