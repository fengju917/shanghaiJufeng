    <LinearLayout
        android:layout_width="457dip"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:layout_marginTop="10dip"
        android:background="@drawable/set_item_back"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_transaction_flow_num"
            android:textColor="@color/dialog_lable_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/max_transaction_edit"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:background="@color/dialog_button"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="250dip"
		android:layout_height="57dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/button_style"
        android:text="@string/save_text"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>