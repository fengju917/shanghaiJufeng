<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <include
        android:layout_width="800dip"
		android:layout_height="79dip"
        layout="@layout/lakala_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

    <TextView
        android:id="@+id/sys_settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/system_param_set"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="457dip"
        android:layout_height="60dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/set_item_back"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/standby_timeout"
            android:textColor="@color/dialog_lable_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/standby_time_edit"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:background="@color/dialog_button"
            android:inputType="number"
            android:maxLength="3"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="457dip"
        android:layout_height="60dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/set_item_back"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_batch"
            android:textColor="@color/dialog_lable_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/second_batch_edit"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:background="@color/dialog_button"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="457dip"
        android:layout_height="60dip"
        android:orientation="horizontal" 
        android:layout_marginTop="10dip"
        android:background="@drawable/set_item_back"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_billno"
            android:textColor="@color/dialog_lable_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/second_billno_edit"
            android:layout_width="260dip"
            android:layout_height="wrap_content"
            android:background="@color/dialog_button"
            android:inputType="number"
            android:maxLength="6"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>
