<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_background"
    android:gravity="center"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="79dip"
        layout="@layout/lakala_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="492dip"
        android:background="@drawable/contentbg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="784dip"
            android:layout_height="476dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/menu_background"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lablebg"
                android:layout_width="680dip"
                android:layout_height="60dip"
                android:layout_marginLeft="52dip"
                android:layout_marginTop="50dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/lableicon"
                    android:layout_width="50dip"
                    android:layout_height="60dip"
                    android:gravity="left|center" />

                <TextView
                    android:id="@+id/lablemessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="680dip"
                android:layout_height="323dip"
                android:layout_marginLeft="52dip"
                android:background="@drawable/binputbg" >

                <ImageView
                    android:id="@+id/result_image"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_marginLeft="120dip"
                    android:layout_marginTop="70dip"
                    android:background="@drawable/success" />

                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="85dip"
                    android:layout_toRightOf="@id/result_image"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/result_massage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result_text"
                    android:layout_marginLeft="40dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/result_image"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/ok_button"
                    android:layout_width="250dip"
                    android:layout_height="57dip"
                    android:layout_below="@id/result_massage_text"
                    android:layout_marginLeft="215dip"
                    android:layout_marginTop="30dip"
                    android:background="@drawable/activate_btn"
                    android:text="确定"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>