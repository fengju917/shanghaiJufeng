<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/lakala_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="629.76dip"
        android:background="@drawable/contentbg"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="1003.52dip"
            android:layout_height="609.28dip"
            android:layout_marginLeft="10.24dip"
            android:layout_marginTop="10.24dip"
            android:background="@drawable/scontentbg"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="870.4dip"
                android:layout_height="76.8dip"
                android:layout_marginLeft="66.56dip"
                android:layout_marginTop="64.0dip"
                android:background="@drawable/topbg"
                android:orientation="horizontal">
                
            <ImageView 
                android:layout_width="64.0dip"
                android:layout_height="76.8dip"
                android:gravity="left|center"
                android:background="@drawable/sshezhi_icon"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="38.4dp"
                android:text="@string/settings_text"
                android:layout_marginTop="12.8dip"/>
   			</LinearLayout>
   			
            <LinearLayout
                android:layout_width="870.4dip"
                android:layout_height="413.44dip"
                android:layout_marginLeft="66.56dip"
                android:background="@drawable/binputbg"
                android:gravity="center"
                android:orientation="vertical">"
				<LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:gravity="center_horizontal"
	                android:layout_marginRight="30dip"
	                android:layout_marginTop="38.4dip">
	                <ImageView 
	                    android:layout_width="57.6dip"
	                    android:layout_height="57.6dip"
	                    android:layout_marginTop="6.4dip"
	                    android:background="@drawable/lock"/>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text="请输入系统管理员密码："
	                    android:textColor="#000000"
	                    android:textSize="51.2dp"/>
	            </LinearLayout>
	            <EditText 
	                android:id="@+id/input_operpswd"
	                android:layout_width="665.6dip"
	                android:layout_height="89.6dip"
	                android:layout_marginTop="51.2dip"
	                android:singleLine="true"
	                android:inputType="numberPassword"
	                android:maxLength="8"
	                android:hint="系统管理员密码"
			        android:ellipsize="end"
			        android:textSize="38.4dp"
			        android:background="@drawable/input"/>
	            <Button 
	                android:id="@+id/ok_button"
	                android:layout_width="250dip"
					android:layout_height="80dip"
	                android:layout_marginTop="25.6dip"
	                android:background="@drawable/activate_btn"
	                android:text="确定"
	                android:textColor="#FFFFFF"                
	                android:textSize="38.4dp"/>
	   		</LinearLayout>
   		</LinearLayout>
    </LinearLayout>
</LinearLayout>