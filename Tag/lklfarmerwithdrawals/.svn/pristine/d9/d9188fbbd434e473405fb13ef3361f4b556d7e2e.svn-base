<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/lakala_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/commu_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.6dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/commu_param_set"
            android:textColor="@color/black"
            android:textSize="33.28sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="76.8dip"
            android:layout_marginTop="25.6dip"
            android:background="@drawable/set_item_back"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tpdu"
                android:textColor="@color/dialog_lable_text"
                android:textSize="25.6sp" />

            <EditText
                android:id="@+id/tpud_edit"
                android:layout_width="332.8dip"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:background="@color/dialog_button"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="76.8dip"
            android:layout_marginTop="25.6dip"
            android:background="@drawable/set_item_back"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transaction_timeout"
                android:textColor="@color/dialog_lable_text"
                android:textSize="25.6sp" />

            <EditText
                android:id="@+id/tran_timeout_edit"
                android:layout_width="332.8dip"
                android:layout_height="wrap_content"
                android:background="@color/dialog_button"
                android:inputType="number"
                android:maxLength="3"
                android:ellipsize="end"
                android:singleLine="true" />
<!--  
            <TextView
                android:layout_width="wrap_content"
